<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/lv_foot_ml_10"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lv_foot_ml_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_share_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fdsafewffsadfsafasfsdfsdf"
                android:textColor="@color/color_33"
                android:textSize="@dimen/font_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_like_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lv_dividerHeight"
                    android:src="@mipmap/img_like_btn" />

                <TextView
                    android:id="@+id/tv_like_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lv_dividerHeight"
                    android:text="12"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/font_16" />

                <ImageView
                    android:id="@+id/iv_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lv_dividerHeight"
                    android:src="@mipmap/img_comment_btn" />

                <TextView
                    android:id="@+id/tv_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/lv_dividerHeight"
                    android:text="12"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_16"
                    android:layout_marginLeft="@dimen/lv_dividerHeight"
                    android:padding="@dimen/lv_dividerHeight"
                    android:textColor="@color/color_99"
                    android:text="2017-03-16"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_share_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@mipmap/banner02"
            android:scaleType="fitStart" />

    </LinearLayout>

</LinearLayout>