<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/lv_foot_ml_10"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="@dimen/lv_foot_ml_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_icon"
            android:layout_width="@dimen/lv_foot_ml_50"
            android:layout_height="@dimen/lv_foot_ml_50"
            android:background="@drawable/list_itme_img"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@mipmap/header" />

        <TextView
            android:id="@+id/tv_share_user_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lv_foot_ml_10"
            android:text="TextView"
            android:textColor="@color/color_33"
            android:textSize="@dimen/font_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_goods_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="干货分享"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/aam_item_border" />

    <TextView
        android:id="@+id/tv_share_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fdsafewffsadfsafasfsdfsdf"
        android:textColor="@color/color_33"
        android:textSize="@dimen/font_20" />

    <TextView
        android:id="@+id/tv_share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:text="fdsafewffsadfsafasffsdafawesdfsadfsdfassdfsdf"
        android:textColor="@color/color_99"
        android:textSize="@dimen/font_18" />

    <ImageView
        android:id="@+id/iv_share_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@mipmap/banner02" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/aam_item_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/lv_foot_ml_10"
            android:src="@mipmap/img_share_btn" />

        <TextView
            android:id="@+id/tv_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/lv_foot_ml_10"
            android:text="12"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_18" />

        <ImageView
            android:id="@+id/iv_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/lv_foot_ml_10"
            android:src="@mipmap/img_like_btn" />

        <TextView
            android:id="@+id/tv_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/lv_foot_ml_10"
            android:text="12"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_18" />

        <ImageView
            android:id="@+id/iv_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/lv_foot_ml_10"
            android:src="@mipmap/img_comment_btn" />

        <TextView
            android:id="@+id/tv_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/lv_foot_ml_10"
            android:text="12"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_18" />
    </LinearLayout>
</LinearLayout>