<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_main_header"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:layout_centerInParent="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/font_24"
          android:text="@string/app_name"/>
       <ImageView
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="8dp"
           android:id="@+id/iv_main_recomend"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/recommed"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/rl_main_header"
        android:layout_above="@+id/rg"
        android:id="@+id/main_vp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ></android.support.v4.view.ViewPager>
    <com.example.just.shequnlianmeng.views.MainRadioGroup
        android:layout_alignParentBottom="true"
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_home"
            android:text="首页"
            style="@style/radio_button_styles"
            />
        <!--<RadioButton-->
            <!--android:id="@+id/rb_community"-->
            <!--android:text="社区"-->
            <!--style="@style/radio_button_styles"-->
            <!--/>-->
        <!--<RadioButton-->
            <!--android:id="@+id/rb_search"-->
            <!--android:text="搜索"-->
            <!--style="@style/radio_button_styles"-->
            <!--/>-->
        <RadioButton
            android:id="@+id/rb_chat"
            android:text="聊天"
            style="@style/radio_button_styles"
            />
        <RadioButton
            android:id="@+id/rb_mine"
            android:text="我的"
            style="@style/radio_button_styles"
            />

    </com.example.just.shequnlianmeng.views.MainRadioGroup>
    <View
        android:layout_above="@id/rg"
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
</RelativeLayout>
