<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
<LinearLayout
    android:id="@+id/item_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lv_item_header"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <com.example.just.shequnlianmeng.views.XCRoundRectImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/lv_item_icon"
        android:layout_height="@dimen/lv_item_icon"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/font_18"
        android:textColor="@color/col_333333"
        android:text="用户名称"/>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_style"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_18"
        android:textColor="@color/col_999999"
        android:text="产品众筹"/>
</LinearLayout>
    <com.example.just.shequnlianmeng.views.XCRoundRectImageView
        android:layout_below="@id/item_ll"
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_below="@id/iv_image"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_24"
        android:textColor="@color/col_333333"
        android:textStyle="bold"
        android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>
    <TextView
        android:layout_marginTop="6dp"
        android:layout_below="@id/tv_title"
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_18"
        android:textColor="@color/col_999999"
        android:text="温暖的家你付款赶紧睡吧敬爱的空间被罚款颁发的被罚款的被罚款的步伐"
        />
    <LinearLayout
        android:layout_below="@id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lv_item_header"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/lv_foot_iv_30"
            android:layout_height="@dimen/lv_foot_iv_30"
            android:src="@drawable/share"/>
        <TextView
            android:id="@+id/tv_shareNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lv_foot_ml_10"
            android:textSize="@dimen/font_18"
            android:textColor="@color/col_999999"
            android:text="11"/>
        <ImageView
            android:layout_width="@dimen/lv_foot_iv_30"
            android:layout_height="@dimen/lv_foot_iv_30"
            android:layout_marginLeft="@dimen/lv_foot_ml_50"
            android:src="@drawable/good"/>
        <TextView
            android:id="@+id/tv_goodNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lv_foot_ml_10"
            android:textSize="@dimen/font_18"
            android:textColor="@color/col_999999"
            android:text="22"/>
        <ImageView
            android:layout_width="@dimen/lv_foot_iv_30"
            android:layout_height="@dimen/lv_foot_iv_30"
            android:layout_marginLeft="@dimen/lv_foot_ml_50"
            android:src="@drawable/discusstion"/>
        <TextView
            android:id="@+id/tv_discussNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lv_foot_ml_10"
            android:textSize="@dimen/font_18"
            android:textColor="@color/col_999999"
            android:text="111"/>

    </LinearLayout>
</RelativeLayout>