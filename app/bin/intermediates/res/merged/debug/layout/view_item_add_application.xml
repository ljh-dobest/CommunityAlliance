<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/border_10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_application_img"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            app:srcCompat="@mipmap/ganhuo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <com.czp.library.ArcProgress
            android:id="@+id/pb_schedule"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:degree="0"
            app:radius="40dp"
            app:borderWidth="2dp"
            app:progressStyle="arc"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:progressColor="@color/green"
            app:tickDensity="2" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.5"
            app:srcCompat="@mipmap/download" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_application_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/border_10"/>
</LinearLayout>