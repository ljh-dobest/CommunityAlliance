<?xml version="1.0" encoding="utf-8"?>
<com.example.just.shequnlianmeng.views.CustomToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:padding="@dimen/border_10"
    app:popupTheme="@style/AppTheme">

    <TextView
        android:id="@+id/lt_main_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_20"
        android:drawableLeft="@mipmap/back"
        android:gravity="center"
        android:padding="@dimen/border_4"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_28"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lt_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_48"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lt_main_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/border_20"
        android:drawableRight="@mipmap/more"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_28"
        android:visibility="visible" />

</com.example.just.shequnlianmeng.views.CustomToolbar>