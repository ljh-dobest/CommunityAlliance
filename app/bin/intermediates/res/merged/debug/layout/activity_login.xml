<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    >
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <ImageView
        android:layout_marginTop="213px"
        android:id="@+id/iv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login"
        android:textSize="@dimen/font_48"
        />
    <android.support.design.widget.TabLayout
        android:layout_marginTop="86px"
        android:layout_below="@id/iv_login"
        android:id="@+id/tl_login"
        android:layout_centerHorizontal="true"
        android:layout_width="380px"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/col_10DB9F"
        app:tabIndicatorHeight="14px"
        app:tabSelectedTextColor="@color/col_333333"
        app:tabTextColor="@color/col_666666">

    </android.support.design.widget.TabLayout>
 <android.support.v4.view.ViewPager
     android:layout_marginTop="37px"
     android:layout_below="@id/tl_login"
     android:id="@+id/vp_login"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoRelativeLayout>
