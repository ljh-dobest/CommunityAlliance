<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
   >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_signpicker_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textStyle="bold"
            android:textColor="@color/col_121212"
            android:textSize="@dimen/font_28" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="签到"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20" />
        />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_signpicker_lastmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue3"
            android:src="@drawable/back_press"/>
        <TextView
            android:id="@+id/tv_signpicker_date"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_40"
            android:textStyle="bold"
            android:text="2017.03"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/blue3"
            android:id="@+id/iv_signpicker_nextmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_press"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.example.just.shequnlianmeng.views.mydatepicker.DatePicker2
        android:id="@+id/my_datepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_signpicker_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_30"
        android:background="@drawable/btn_shape"
        android:text="签到"/>
</com.zhy.autolayout.AutoLinearLayout>
