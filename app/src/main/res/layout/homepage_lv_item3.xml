<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    >
        <com.example.just.shequnlianmeng.views.CircleImageView
            android:id="@+id/iv_home_item_userIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_portrait" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_home_item_userIcon"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_home_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="孟小宝"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号:"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_home_item_userNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ike002578"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐人:"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_home_item_recommender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ike0024877李太白"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/woyaorenling"
            android:textColor="@color/col_999999"
            android:background="@color/col_10DB9F"
            android:textSize="@dimen/font_12" />
        />
</RelativeLayout>