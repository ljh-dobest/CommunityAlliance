<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/col_DDDDDD"
   >
    <ScrollView
        android:id="@+id/homepage_sl"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.youth.banner.Banner
                android:id="@+id/homepage_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:indicator_width="10dp"
                app:indicator_height="10dp"
                />
            <com.example.just.shequnlianmeng.views.HomeGridView
                android:id="@+id/home_ad_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="4"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                ></com.example.just.shequnlianmeng.views.HomeGridView>
            <ListView
                android:id="@+id/homepage_lv"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:dividerHeight="@dimen/lv_dividerHeight"
                android:layout_height="1400dp"></ListView>
        </LinearLayout>
            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/homepage_iv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/top"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>