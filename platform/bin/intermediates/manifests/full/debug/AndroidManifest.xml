<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ike.coalition.platform"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.ike.coalition.platform.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.ike.coalition.platform.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ike.coalition.platform.ui.activity.PlatformParticularsActivity" />
        <activity android:name="com.ike.coalition.platform.ui.activity.MInPlatformActivity" />
        <activity android:name="com.ike.coalition.platform.ui.activity.PlatformRegisteredActivity" />
        <activity android:name="com.ike.coalition.platform.ui.activity.FeedForCommentActivity" />
        <activity android:name="com.ike.coalition.platform.ui.activity.CommentMessageActivity" />

        <meta-data
            android:name="design_width"
            android:value="750" />
        <meta-data
            android:name="design_height"
            android:value="1340" />
    </application>

</manifest>