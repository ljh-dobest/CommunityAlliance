<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_66"
        android:gravity="center"
        android:text="@string/str_information"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/border_6"
        android:layout_marginRight="@dimen/border_6"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/tv_my_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_66"
        android:gravity="center"
        android:text="@string/str_my_product_collect"
        android:textColor="@color/color_66"
        android:textSize="@dimen/font_26" />
</LinearLayout>