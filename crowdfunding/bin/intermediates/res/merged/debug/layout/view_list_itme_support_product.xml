<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="@dimen/border_20"

    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/font_30"
        android:textColor="@color/color_33"
        android:text="￥88.0" />

    <TextView
        android:id="@+id/tv_product_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/font_30"
        android:textColor="@color/color_99"
        android:text="认筹人数2人/无限制" />

    <View
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_price"
        android:layout_marginTop="@dimen/border_10"
        android:background="@color/aam_item_border" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:textColor="@color/color_33"
        android:textSize="@dimen/font_30"
        android:layout_marginTop="@dimen/border_14"
        android:text="产品名称" />

    <TextView
        android:id="@+id/tv_product_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_product_name"
        android:layout_marginTop="@dimen/border_4"
        android:textSize="@dimen/font_28"
        android:textColor="@color/color_66"
        android:text="产品介绍" />

    <TextView
        android:id="@+id/tv_min_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_product_content"
        android:layout_marginTop="@dimen/border_10"
        android:padding="@dimen/border_20"
        android:textSize="@dimen/font_30"
        android:textColor="@color/color_33"
        android:background="@drawable/submit_comment_bkg"
        android:gravity="center"
        android:text="我要支持" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注"
        android:layout_alignBaseline="@+id/tv_min_support"
        android:layout_alignBottom="@+id/tv_min_support"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color_99"
        android:textSize="@dimen/font_28"
        android:layout_alignParentStart="true" />

</RelativeLayout>