<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/border_20"
    android:background="@android:color/white"
    android:orientation="vertical"
    app:layout_auto_basewidth="height"
    app:layout_auto_baseheight="width"
    android:padding="@dimen/border_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product_icon"
            android:layout_width="@dimen/border_88"
            android:layout_height="@dimen/border_88"
            android:adjustViewBounds="true"
            android:background="@drawable/list_itme_img"
            android:scaleType="fitStart"
            android:src="@mipmap/header" />

        <TextView
            android:id="@+id/tv_product_user_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_20"
            android:text="TextView"
            android:textColor="@color/color_33"
            android:textSize="@dimen/font_34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_goods_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品众筹"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_22" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/banner02" />

        <TextView
            android:id="@+id/tv_surplus_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:padding="@dimen/border_20"
            android:text="剩余22天"
            android:textSize="@dimen/font_30"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/iv_product_img" />
    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fdsafewffsadfsafasfsdfsdf"
        android:textColor="@color/color_33"
        android:textSize="@dimen/font_38" />

    <TextView
        android:id="@+id/tv_product_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:text="fdsafewffsadfsafasffsdafawesdfsadfsdfassdfsdf"
        android:textColor="@color/color_99"
        android:textSize="@dimen/font_28" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_confess_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/border_20"
            android:textSize="@dimen/font_28"
            android:text="认筹总额：5080.00" />

        <TextView
            android:id="@+id/tv_amount_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_confess_total"
            android:layout_marginRight="@dimen/border_20"
            android:textSize="@dimen/font_28"
            android:text="目标总额：15080.00" />

        <ProgressBar
            android:id="@+id/pb_schedule"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_confess_total"
            android:layout_marginTop="@dimen/border_10"
            android:progressDrawable="@drawable/progressbar" />

        <TextView
            android:id="@+id/tv_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pb_schedule"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/border_20"
            android:textSize="@dimen/font_28"
            android:text="45%" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_20"
            android:src="@mipmap/img_share_btn" />

        <TextView
            android:id="@+id/tv_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_20"
            android:text="12"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_24" />

        <ImageView
            android:id="@+id/iv_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_20"
            android:src="@mipmap/img_like_btn" />

        <TextView
            android:id="@+id/tv_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_10"
            android:text="12"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_24" />

        <ImageView
            android:id="@+id/iv_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_20"
            android:src="@mipmap/img_comment_btn" />

        <TextView
            android:id="@+id/tv_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_20"
            android:text="12"
            android:textColor="@color/color_99"
            android:textSize="@dimen/font_24" />
    </LinearLayout>

</LinearLayout>