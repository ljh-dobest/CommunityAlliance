<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape><solid android:color="@color/green" />
            <corners android:bottomLeftRadius="@dimen/border_8" android:topLeftRadius="@dimen/border_8" />
            <padding
                android:left="@dimen/border_4"
                android:top="@dimen/border_10"
                android:right="@dimen/border_4"
                android:bottom="@dimen/border_10" />
            <!-- 描边，边框 -->
            <stroke
                android:width="1dp"
                android:color="@color/green"
                />
        </shape>

    </item>
    <item android:state_checked="false" >
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:bottomLeftRadius="@dimen/border_8" android:topLeftRadius="@dimen/border_8" />
            <padding
                android:left="@dimen/border_4"
                android:top="@dimen/border_10"
                android:right="@dimen/border_4"
                android:bottom="@dimen/border_10" />
            <!-- 描边，边框 -->
            <stroke
                android:width="1dp"
                android:color="@color/green"
                />
        </shape>

    </item>
</selector>