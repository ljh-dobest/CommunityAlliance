<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/border_10"
            android:padding="@dimen/border_20">

                <TextView
                    android:id="@+id/tv_commodity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@string/str_product_commodity_tow"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/font_30" />

                <TextView
                    android:layout_width="@dimen/border_30"
                    android:layout_height="@dimen/border_30"
                    android:layout_margin="@dimen/border_10"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/item_more" />
        </LinearLayout>
</LinearLayout>