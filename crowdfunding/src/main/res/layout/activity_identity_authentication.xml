<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aam_item_border"
    android:orientation="vertical">

    <include layout="@layout/view_custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_20"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/border_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*姓&#160;&#160;&#160;&#160;名："
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_32" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/font_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_10"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/border_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*身份证："
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_32" />

        <EditText
            android:id="@+id/et_user_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/font_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/border_10"

        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/border_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*手&#160;&#160;&#160;&#160;机："
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_32" />

        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/font_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/border_50">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_30"
            android:layout_marginRight="@dimen/border_30"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:padding="@dimen/border_20"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="@dimen/border_34" />
    </LinearLayout>
</LinearLayout>